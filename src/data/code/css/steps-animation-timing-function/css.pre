.loading {
    width: 20px;
    height: 30px;
    display: flex;
    flex-wrap: wrap;
}

.loading .cell {
    width: 6px;
    height: 6px;
    background-color: #fff;
    margin: 2px;
    opacity: 0;
    animation: fade 1.2s steps(2) infinite;
    animation-delay: calc(var(--i, 0) * .2s);
}

@keyframes fade {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}